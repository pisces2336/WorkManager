<%= form_with model: work do |f| %>
  <div>
    <%= f.label :client_name, class: "form-label" %>
    <%= f.text_field :client_name, class: "form-control" %>
  </div>

  <div class="mt-3">
    <%= f.label :due, class: "form-label" %>
    <%= f.date_field :due, class: "form-control" %>
  </div>

  <hr>

  <div class="mt-3">
    <%= f.label :contact_url, class: "form-label" %>
    <%= f.url_field :contact_url , class: "form-control" %>
  </div>

  <div class="mt-3">
    <%= f.label :document_url, class: "form-label" %>
    <%= f.url_field :document_url, class: "form-control" %>
  </div>

  <hr>

  <div class="mt-3">
    <%= f.label :memo, class: "form-label" %>
    <%= f.text_area :memo, class: "form-control" %>
  </div>

  <div class="d-grid mt-5">
    <%= f.submit "送信", class: "btn btn-success" %>
  </div>
<% end %>