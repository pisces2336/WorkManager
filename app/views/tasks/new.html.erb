<div class="container">
  <div class="row">
    <div class="col">
      <h2>新規タスク (<%= @work.client_name %>)</h2>

      <%= form_with model: [@work, @task] do |f| %>
        <div>
          <%= f.label :title, class: "form-label" %>
          <%= f.text_field :title, class: "form-control" %>
        </div>

        <div class="mt-3">
          <%= f.label :scheduled_date, class: "form-label" %>
          <%= f.date_field :scheduled_date, class: "form-control" %>
        </div>

        <div class="mt-3">
          <%= f.label :due_date, class: "form-label" %>
          <%= f.date_field :due_date, class: "form-control" %>
        </div>

        <div class="d-grid mt-5">
          <%= f.submit "送信", class: "btn btn-success" %>
        </div>
      <% end %>
    </div>
  </div>
</div>